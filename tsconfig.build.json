{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowImportingTsExtensions": false
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    ".storybook",
    "**/*.stories.tsx",
    "**/*.test.tsx",
    "**/*.test.ts"
  ]
}
